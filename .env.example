# Django Settings
DJANGO_SECRET_KEY=canviar-per-clau-segura-generada-amb-secrets-token-urlsafe
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=vcpe_api.settings

# Base de dades PostgreSQL/PostGIS
DB_NAME=vcpe_db
DB_USER=vcpe_user
DB_PASSWORD=canviar-per-contrasenya-forta
DB_HOST=db
DB_PORT=5432

# Redis (per Celery i cache)
REDIS_URL=redis://redis:6379/0

# JWT Settings
JWT_SECRET_KEY=canviar-per-clau-jwt-segura
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=30
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# OAuth2 Settings (si s'utilitza)
OAUTH2_CLIENT_ID=
OAUTH2_CLIENT_SECRET=

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True

# Seguretat
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/vcpe_api/api.log

# Notificacions
NOTIFICATION_EMAIL=notificacions@icatmar.cat
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=True

# Slack (opcional per alertes)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#icatmar-alerts

# Entorn
ENVIRONMENT=development
